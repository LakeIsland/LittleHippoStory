<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/success_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:src="@drawable/init_player"
        android:visibility="visible" />

    <TextView
        android:id="@+id/success_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="누구든 작은 하마를 건드리면  O되는거에요"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/success_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/success_message1"
        android:textStyle="bold"
        android:text="아주 O되는거야"
        android:textSize="40sp" />
    
    <TextView
        android:id="@+id/success_message3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/success_message2"
        android:text="Do Again?"
        android:textSize="30sp"
        />
    
    <ImageView
        android:id="@+id/success_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft = "40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/success_message3"
        android:src="@drawable/success_yes"
        android:clickable="false"
        android:onClick="mYesOnClick"/>
    
    <ImageView
        android:id="@+id/success_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dp"
        android:layout_marginLeft = "40dp"
        android:layout_toRightOf="@id/success_yes"
        android:layout_below="@id/success_message3"
        android:src="@drawable/success_no"
        android:clickable="false"
        android:onClick="mNoOnClick" />

    

</RelativeLayout>