<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/fail_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:src="@drawable/init_crow"
        android:visibility="visible" />

    <TextView
        android:id="@+id/fail_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="까마귀는 멀리 멀리 달아나 버렸어요"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fail_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fail_message1"
        android:textStyle="bold"
        android:text="작은 하마는 너무 슬펐답니다"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/fail_message3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fail_message2"
        android:text="Do Again?"
        android:textSize="30sp"
        />
    
    <ImageView
        android:id="@+id/fail_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft = "40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fail_message3"
        android:src="@drawable/success_yes"
        android:clickable="false"
        android:onClick="mYesOnClick"/>
    
    <ImageView
        android:id="@+id/fail_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dp"
        android:layout_marginLeft = "40dp"
        android:layout_toRightOf="@id/fail_yes"
        android:layout_below="@id/fail_message3"
        android:src="@drawable/success_no"
        android:clickable="false"
        android:onClick="mNoOnClick" />

    

</RelativeLayout>