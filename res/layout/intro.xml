<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <ImageView
        android:id="@+id/init_crow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/init_crow"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/init_blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/init_blood"
        android:visibility="visible" /> 
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight ="1" 
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/init_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/init_player"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight ="1" 
            android:layout_height="match_parent" >
  
			<ImageView
                android:id="@+id/init_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/init_title2"
                android:visibility="visible"
                android:layout_centerInParent="true" />
			
            <ImageView
                android:id="@+id/init_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/init_title1"
                android:visibility="visible"
                android:layout_above="@id/init_title2"
             />
            
            <ImageView
                android:id="@+id/init_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/init_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop = "20dp"
                android:layout_below="@id/init_title2"
                android:onClick="mOnClick"
                android:visibility="invisible"
                android:clickable="false"
            />

            
        </RelativeLayout>

    </LinearLayout>
    
    


</FrameLayout>
